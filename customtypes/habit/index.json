{
  "format": "custom",
  "id": "habit",
  "label": "Habit",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": ""
        }
      },
      "name": {
        "type": "Text",
        "config": {
          "label": "Habit Name",
          "placeholder": "Enter habit name"
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Description",
          "placeholder": "Describe the habit",
          "multi": "paragraph,strong,em,hyperlink"
        }
      },
      "main_image": {
        "type": "Image",
        "config": {
          "label": "Main Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "benefits": {
        "type": "Group",
        "config": {
          "label": "Benefits",
          "fields": {
            "benefit": {
              "type": "Text",
              "config": {
                "label": "Benefit Description"
              }
            }
          }
        }
      },
      "difficulty_level": {
        "type": "Select",
        "config": {
          "label": "Difficulty Level",
          "placeholder": "Select difficulty",
          "options": ["Beginner", "Intermediate", "Advanced"]
        }
      },
      "implementation_tips": {
        "type": "StructuredText",
        "config": {
          "label": "Implementation Tips",
          "multi": "paragraph,strong,em,list-item"
        }
      },
      "category": {
        "type": "Link",
        "config": {
          "label": "category",
          "select": "document",
          "repeat": false,
          "customtypes": ["habit_category"]
        }
      }
    }
  }
}
